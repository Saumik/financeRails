- content_for :javascript do
  :javascript
    $(document).ready(function() {
      var view = new financeRails.views.budgets.BudgetView();
    });

.well
  %h2 Budget items
  %a.btn.btn-primary.open_create_budget_item Create budget item

%ul.year_selector
  - months_between(*@presenter.budget_year_range).each do |date|
    %li{data: {date: month_year_short(date)}, class: (date.year == Date.today.year) ? 'active' : ''}= date.strftime('%Y')

= render 'monthly_report'

#budget_item_modal.modal.hide
  = semantic_form_for :budget_item, :url => {:action => :create}, :remote => true do |f|
    .modal-body.well
      %h2 Included Categories:
      .btn-group.row-fluid
        %a.offset1.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          Add Category
          %span.caret
        %ul.dropdown-menu
          - @categories.each do |category|
            %li{'data-name' =>  category}
              %a.add_category
                = category
      .row-fluid
        %ul.included_categories.span6
      .row-fluid
        = f.input :budget_year, :input_html => {:class => 'span6 budget_year'}, :input_html => {:value => Time.now.year}
        = f.input :name, :input_html => {:class => 'span6 name'}
        = f.input :limit, :input_html => {:class => 'span6 limit'}
      .expense-data.clear-fix
    .modal-footer
      %a.btn(data-dismiss='modal') Cancel
      %button.btn.btn-primary.submit{:type => :submit} Submit
