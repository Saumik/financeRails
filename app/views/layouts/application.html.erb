<!DOCTYPE html>
<html>
<head>
  <title>FinanceRails2</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Smart Finance</a>
      <ul class="nav">
        <li><%= link_to 'Home', :controller => '/line_items', :action => :index %></li>
        <li><%= link_to 'Groceries', :controller => '/groceries', :action => :index %></li>
        <li><%= link_to 'Import', :controller => '/external', :action => :import %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Import DB
            <b class="caret"></b>
          </a>

          <ul class="dropdown-menu">
            <% @backup_folders.each_with_index do |folder, index| %>
              <li>
                <%= link_to folder, :controller => '/external', :action => :import_json, :position => index %>
              </li>
            <% end %>
          </ul>
        </li>
        <li><%= link_to 'Export DB', :controller => '/external', :action => :export_json %></li>
      </ul>
      <% if user_signed_in? %>
        <div class="logged-in-info">Welcome <%= current_user.email %> (<%= link_to "Logout", destroy_user_session_path, :method => :delete %>)</div>
      <% end %>
    </div>
  </div>
</div>
<div class="<%=controller_name%>_section <%=action_name%>">
  <% controllers_without_nav = %w(sessions external accounts registrations) %>
  <%= render :partial => @override_section ? @override_section + '/nav' : 'nav' unless controllers_without_nav.include? controller_name %>

  <% if current_user %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="left-bar span2">
          <%= render 'common/left_bar' %>
        </div>
        <div class="main_area span10">
          <% if flash[:error].present? %>
            <div class="alert alert-error">
              <button class="close" data-dismiss="alert">×</button>
              <strong>Error:</strong> <%= flash[:error] %>
            </div>
          <% end %>
          <% if flash[:success].present? %>
            <div class="alert alert-success">
              <button class="close" data-dismiss="alert">×</button>
              <strong><%= flash[:success] %></strong>
            </div>
          <% end %>
          <% if flash[:notice].present? %>
            <div class="alert alert-info">
              <button class="close" data-dismiss="alert">×</button>
              <strong><%= flash[:notice] %></strong>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="full-container">
      <%= yield %>
    </div>
  <% end %>
</div>
<%= yield :javascript %>
</body>
</html>
