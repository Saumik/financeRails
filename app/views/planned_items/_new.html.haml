.new_modal_dialog.modal.hide
  .modal-header
    %h3 Create Planned Item
  = simple_form_for @item, :remote => true, :html => { :class => 'form-horizontal new_form remote_form' } do |f|
    .modal-body.well
      = render :partial => 'form', :locals => {:f => f}
    .modal-footer
      %button.edit_item_btn.btn.btn-primary.submit{:type => :submit} Submit
      %a.btn(data-dismiss='modal') Cancel